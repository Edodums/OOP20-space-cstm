<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<Group xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="main.views.customization.components.EntityPlayer"
       fx:id="entityPlayer">
    <Label fx:id="entityPlayerLabel" layoutX="44.0" layoutY="457.0" text="Player Custom">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <TextField fx:id="entityPlayerFilename" disable="true" layoutX="161.0" layoutY="494.0" prefHeight="25.0" prefWidth="233.0"
               promptText="Filename goes here after being chosen"/>
    <ImageView fx:id="entityPlayerImage" layoutX="412.0" layoutY="500.0" fitWidth="80" fitHeight="80" />
    <CheckBox fx:id="entityPlayerIsDivided" layoutX="44.0" layoutY="537.0" mnemonicParsing="false" text="Divide into grid image"/>
    <Button layoutX="44.0" layoutY="494.0" mnemonicParsing="false" text="Choose Image" onAction="#entityPlayerChooseImage"/>
    <TextField fx:id="entityPlayerRows" alignment="CENTER_RIGHT" disable="true" layoutX="44.0" layoutY="582.0" opacity="0.0"
               prefHeight="25.0" prefWidth="43.0" promptText="Rows"/>
    <TextField fx:id="entityPlayerColumns" alignment="CENTER_RIGHT" disable="true" layoutX="93.0" layoutY="582.0" opacity="0.0"
               prefHeight="25.0" prefWidth="62.0" promptText="Columns"/>
    <TextField fx:id="entityPlayerSelectedRow" alignment="CENTER_RIGHT" disable="true" layoutX="163.0" layoutY="582.0" opacity="0.0"
               prefHeight="25.0" prefWidth="84.0" promptText="Row Selected"/>
    <TextField fx:id="entityPlayerSelectedColumn" alignment="CENTER_RIGHT" disable="true" layoutX="256.0" layoutY="582.0" opacity="0.0"
               prefHeight="25.0" prefWidth="105.0" promptText="Column Selected"/>
</Group>