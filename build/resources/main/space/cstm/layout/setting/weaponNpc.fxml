<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<Group xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="space.cstm.views.customization.components.WeaponNpc"
       fx:id="weaponNpc">
    <Label fx:id="weaponNpcLabel" layoutX="44.0" layoutY="157.0" text="Enemy Laser">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <TextField fx:id="weaponNpcFilename" disable="true" layoutX="161.0" layoutY="194.0" prefHeight="25.0" prefWidth="233.0"
               promptText="Filename goes here after being chosen"/>
    <ImageView fx:id="weaponNpcImage" layoutX="412.0" layoutY="200.0" fitWidth="80" fitHeight="80" />
    <CheckBox fx:id="weaponNpcIsDivided" layoutX="44.0" layoutY="237.0" mnemonicParsing="false" text="Divide into grid image"/>
    <Button layoutX="44.0" layoutY="194.0" mnemonicParsing="false" text="Choose Image" onAction="#weaponNpcChooseImage"/>
    <TextField fx:id="weaponNpcRows" alignment="CENTER_RIGHT" disable="true" layoutX="44.0" layoutY="282.0" opacity="0.0"
               prefHeight="25.0" prefWidth="43.0" promptText="Rows"/>
    <TextField fx:id="weaponNpcColumns" alignment="CENTER_RIGHT" disable="true" layoutX="93.0" layoutY="282.0" opacity="0.0"
               prefHeight="25.0" prefWidth="62.0" promptText="Columns"/>
    <TextField fx:id="weaponNpcSelectedRow" alignment="CENTER_RIGHT" disable="true" layoutX="163.0" layoutY="282.0" opacity="0.0"
               prefHeight="25.0" prefWidth="84.0" promptText="Row Selected"/>
    <TextField fx:id="weaponNpcSelectedColumn" alignment="CENTER_RIGHT" disable="true" layoutX="256.0" layoutY="282.0" opacity="0.0"
               prefHeight="25.0" prefWidth="105.0" promptText="Column Selected"/>
</Group>